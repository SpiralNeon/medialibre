{{#>layout title="New Artist | MediaLibre/Music" isMusic=true}}
  <h1 class="text-2xl font-bold text-gray-500">New Artist</h1>
  <form method="POST" action="/api/music/artist" class="bg-purple-200 p-3 mt-3">
  	<label for="artist-name" class="text-lg mt-3">Name:</label><br />
    <input id="artist-name" type="text" name="name" class="py-2 px-3 mt-3 rounded w-full" required /><br />
    <input
      type="submit"
      value="Submit"
      class="text-lg mt-5 rounded bg-purple-500 hover:bg-purple-600 text-white px-3 py-1 cursor-pointer"
    />
  </form>
{{/layout}}
